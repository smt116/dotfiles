  email = smt116@gmail.com
  name = Maciej Malecki

[color]
  diff = always
  ui = true

[color "diff"]
  whitespace = red reverse

[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
  excludesfile = ~/.gitignore

[alias]
  s = status
  ss = status -s
  c = commit
  d = diff
  l = log
  b = branch
  co = checkout
